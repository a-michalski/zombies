# ============================================
# ZOMBIE FLEET - Environment Variables
# ============================================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Analytics (Optional - Phase 1)
# PostHog: https://posthog.com/
EXPO_PUBLIC_POSTHOG_API_KEY=your-posthog-key-here
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# App Configuration
EXPO_PUBLIC_APP_VERSION=2.0.0
EXPO_PUBLIC_CLIENT_VERSION=2.0.0

# Feature Flags (for gradual rollout)
EXPO_PUBLIC_FEATURE_LEADERBOARDS=true
EXPO_PUBLIC_FEATURE_ACHIEVEMENTS=true
EXPO_PUBLIC_FEATURE_DAILY_REWARDS=true
EXPO_PUBLIC_FEATURE_FRIENDS=false
EXPO_PUBLIC_FEATURE_CHALLENGES=false

# Anti-Cheat Configuration
EXPO_PUBLIC_ENABLE_ANTI_CHEAT=true
EXPO_PUBLIC_MAX_SCORE_SUBMISSIONS_PER_MINUTE=10

# Development Mode
EXPO_PUBLIC_DEV_MODE=false
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=false
